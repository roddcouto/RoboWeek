
<% if produto.errors.any? %>
  <% produto.errors.full_messages.each do |message| %>
    <div id="notice"  class="alert alert-danger" role="alert">
      <%= message %>
    </div>  
  <% end %>
<% end %>

<div class="row">

  <%= form_with(model: produto, local: true, class:"col s12") do |form| %>

    <div class="form-group">
        <%= form.label 'Nome' %>
        <%= form.text_field :nome, id: :produto_nome, class: "form-control"  %>
      </div>
    
    <div class="form-group">
      <%= form.label 'Descrição' %>
      <%= form.text_area :descricao, id: :produto_descricao, class: "form-control" %>
    </div>
    
    <div class="form-row">
      <div class="col">
        <%= form.label 'Preço' %>
        <%= form.text_field :preco, id: :produto_preco, class: "form-control" %>
      </div>
      
      <div class="col">
        <%= form.label 'Quantidade' %>
        <%= form.number_field :quantidade, id: :produto_quantidade, class: "form-control"  %>
      </div>
    </div>
    
    <div class="mt-4">
      <%= form.submit nil, :class => "btn btn-success" %>
    </div>

  <% end %>
</div>


